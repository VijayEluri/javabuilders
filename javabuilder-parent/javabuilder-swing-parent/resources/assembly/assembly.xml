<assembly xmlns="http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>/</baseDirectory>

	<moduleSets>

		<!--  Swing JavaBuilder -->
		<moduleSet>
			<includes>
				<include>org.javabuilders:javabuilder-swing</include>
			</includes>
			<binaries>
				<outputDirectory>dist</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<includes>
							<include>org.javabuilders:javabuilder-core</include>
						</includes>
					</dependencySet>

					<dependencySet>
						<outputDirectory>lib</outputDirectory>
						<scope>compile</scope>
						<excludes>
							<exclude>org.javabuilders:javabuilder-core</exclude>
						</excludes>
					</dependencySet>

				</dependencySets>
			</binaries>
		</moduleSet>

		<!--  GlazedLists plugin -->
		<moduleSet>
			<includes>
				<include>org.javabuilders:javabuilder-swing-glazedlists</include>
			</includes>
			<binaries>
				<outputDirectory>dist/plugins/glazedlists</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/plugins/glazedlists</outputDirectory>
						<includes>
							<include>net.java.dev.glazedlists:glazedlists_java15</include>
						</includes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>

	</moduleSets>

	<files>
		<file>
			<source>resources/docs/build/latex/SwingJavaBuilder.pdf</source>
			<fileMode>0777</fileMode>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>javabuilder-swing-samples/src/main/java</directory>
			<outputDirectory>samples</outputDirectory>
			<includes>
				<include>org/javabuilders/swing/samples/**</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>