<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>/</baseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>compile</scope>
			<excludes>
			     <exclude>org.javabuilders:javabuilder-swing</exclude>
			     <exclude>org.javabuilders:javabuilder-core</exclude>
			     <exclude>junit:junit</exclude>
			     <exclude>org.slf4j:slf4j-simple</exclude>
			</excludes>
		</dependencySet>
        <dependencySet>
            <outputDirectory>dist</outputDirectory>
            <scope>runtime</scope>
            <includes>
                 <include>org.javabuilders:javabuilder-core</include>
                 <include>org.javabuilders:javabuilder-swing</include>
            </includes>
        </dependencySet>
	</dependencySets>
	<files>
	   <file>
	       <source>../../org.javabuilders.docs/javabuilders/out/pdf/swing.javabuilder.pdf</source>
	       <fileMode>0777</fileMode>
	   </file>
	</files>
	<fileSets>
	   <fileSet>
	       <directory>src/test/java</directory>
	       <outputDirectory>samples</outputDirectory>
	       <includes>
	           <include>org/javabuilders/swing/samples/**</include>
	       </includes>
	   </fileSet>
	</fileSets>
</assembly>